<h1> Review for agency <%= @agency.agency_name %></h1>




<%= form_for @review do |form| %>

  <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
          <% @review.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
  <% end %>


 <div class="field">
    <%= form.label :agency_id %>
    <%= form.hidden_field :agency_id, value: params[:id] %>
  </div>

  <div class="field">
    <%= form.label :tourist %>
    <%= form.hidden_field :tourist_id, value: current_user.id %>
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating, in: 1.0..5.0, step: 0.5 %>
  </div>

  <div class="field">
    <%= form.label :review %>
    <%= form.text_area :review, size: "70x5" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>