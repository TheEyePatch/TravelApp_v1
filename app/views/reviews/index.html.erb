<%= link_to 'Back to Profile', agency_path(params[:agency_id]), class:"btn btn-info ", method: :get%>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Tourist ID</th>
      <th scope="col">Rating</th>
      <th scope="col">Review</th>
    </tr>
  </thead>
  <tbody>
  <% @reviews.each do |review|%>
    <tr>
      <td><%= review.id %></td>
      <td><%= Tourist.where(id: review.tourist_id).first.first_name %></td>
      <td><%= review.rating %></td>
      <td><%= review.review %></td>
         
    </tr>
  <%end%>
  </tbody>
</table>

<div class="container">
    			
		<div class="row">
			<div class="col-sm-3">
				<div class="rating-block">
					<h4>Average user rating</h4>
					<h2 class="bold padding-bottom-7">4.3 <small>/ 5</small></h2>
					<button type="button" class="btn btn-warning btn-sm" aria-label="Left Align">
					  <span class="far fa-star fa-0.5x" aria-hidden="true"></span>
					</button>
					<button type="button" class="btn btn-warning btn-sm" aria-label="Left Align">
					  <span class="far fa-star fa-0.5x" aria-hidden="true"></span>
					</button>
					<button type="button" class="btn btn-warning btn-sm" aria-label="Left Align">
					  <span class="far fa-star fa-0.5x" aria-hidden="true"></span>
					</button>
					<button type="button" class="btn btn-default btn-grey btn-sm" aria-label="Left Align">
					  <span class="fas fa-star fa-0.5x" aria-hidden="true"></span>
					</button>
					<button type="button" class="btn btn-default btn-grey btn-sm" aria-label="Left Align">
					  <span class="fas fa-star fa-0.5x" aria-hidden="true"></span>
					</button>
				</div>
			</div>
			<div class="col-sm-3">
				<h4>Rating breakdown</h4>
				<div class="pull-left">
					<div class="pull-left" style="width:35px; line-height:1;">
						<div style="height:9px; margin:5px 0;">5 <span class="far fa-star fa-0.5x"></span></div>
					</div>
					<div class="pull-left" style="width:180px;">
						<div class="progress" style="height:9px; margin:8px 0;">
						  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="5" aria-valuemin="0" aria-valuemax="5" style="width: 1000%">
							<span class="sr-only">80% Complete (danger)</span>
						  </div>
            
						</div>
					</div>
					<div class="pull-right" style="margin-left:10px;">1</div>
				</div>
				<div class="pull-left">
					<div class="pull-left" style="width:35px; line-height:1;">
						<div style="height:9px; margin:5px 0;">4 <span class="far fa-star fa-0.5x"></span></div>
					</div>
					<div class="pull-left" style="width:180px;">
						<div class="progress" style="height:9px; margin:8px 0;">
						  <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="4" aria-valuemin="0" aria-valuemax="5" style="width: 80%">
							<span class="sr-only">80% Complete (danger)</span>
						  </div>
						</div>
					</div>
					<div class="pull-right" style="margin-left:10px;">1</div>
				</div>
				<div class="pull-left">
					<div class="pull-left" style="width:35px; line-height:1;">
						<div style="height:9px; margin:5px 0;">3 <span class="far fa-star fa-0.5x"></span></div>
					</div>
					<div class="pull-left" style="width:180px;">
						<div class="progress" style="height:9px; margin:8px 0;">
						  <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="3" aria-valuemin="0" aria-valuemax="5" style="width: 60%">
							<span class="sr-only">80% Complete (danger)</span>
						  </div>
						</div>
					</div>
					<div class="pull-right" style="margin-left:10px;">0</div>
				</div>
				<div class="pull-left">
					<div class="pull-left" style="width:35px; line-height:1;">
						<div style="height:9px; margin:5px 0;">2 <span class="far fa-star fa-0.5x"></span></div>
					</div>
					<div class="pull-left" style="width:180px;">
						<div class="progress" style="height:9px; margin:8px 0;">
						  <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="2" aria-valuemin="0" aria-valuemax="5" style="width: 40%">
							<span class="sr-only">80% Complete (danger)</span>
						  </div>
						</div>
					</div>
					<div class="pull-right" style="margin-left:10px;">0</div>
				</div>
				<div class="pull-left">
					<div class="pull-left" style="width:35px; line-height:1;">
						<div style="height:9px; margin:5px 0;">1 <span class="far fa-star fa-0.5x"></span></div>
					</div>
					<div class="pull-left" style="width:180px;">
						<div class="progress" style="height:9px; margin:8px 0;">
						  <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="1" aria-valuemin="0" aria-valuemax="5" style="width: 20%">
							<span class="sr-only">80% Complete (danger)</span>
						  </div>
						</div>
					</div>
					<div class="pull-right" style="margin-left:10px;">0</div>
				</div>
			</div>			
		</div>			
		
    <!--start user reviews-->

		<div class="row">
			<div class="col-sm-7">
				<hr/>
				<div class="review-block">

          <% @reviews.each do |review|%>
					<div class="row">
						<div class="col-sm-3">
              <%if Tourist.where(id: review.tourist_id).first.profile_pic.attached?%>
                <img src="<%=(url_for(@agency.profile_pic))%>" class="img-rounded" alt=""> 
              <%else%>
                <img src="http://dummyimage.com/60x60/666/ffffff&text=No+Image" class="img-rounded">
              <%end%>
							
							<div class="review-block-name"><%= Tourist.where(id: review.tourist_id).first.first_name %></div>
							<div class="review-block-date"><%= review.created_at %></div>
						</div>
						<div class="col-sm-9">
							<div class="review-block-rate">
                <% review.rating.to_i.times do %>
                  <button type="button" class="btn btn-warning btn-sm" aria-label="Left Align" >
                    <span class="far fa-star fa-0.5x" aria-hidden="true"></span>
                  </button>
                <% end %>
								<% (5-review.rating.to_i).times do %>
                  
                  <button type="button" class="btn btn-default btn-light btn-sm" aria-label="Left Align">
                    <span class="far fa-star fa-0.5x" aria-hidden="true"></span>
                  </button>
                <% end %>
							</div>
							<div class="review-block-description"><%= review.review %></div>
              <p>
                <a class="float-right btn text-white btn-danger"> <i class="fa fa-heart"></i> Like</a>
                <a class="float-right btn btn-outline-primary ml-2">  <i class="fa fa-reply"></i> Reply</a>
              </p>
						</div>
					</div>
					<hr/>
					
          <% end %>
					
					
				</div>
			</div>
		</div>
		
    </div> <!-- /container -->