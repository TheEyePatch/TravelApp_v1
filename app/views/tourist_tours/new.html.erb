<h1> <%=@tour.name%> </h1>
<div>
    <% if @tour.images.attached?%>
        <%@tour.images.each do |image|%>
            <img class="img-fluid"   src="<%=(url_for(image))%>" alt="">
         <%end%>
    <%end%>
</div>
<h2> <%=@tour.location%> </h2>
<h3 id = tour-price><%=@tour.price%></h3>
<h3 id = tour-duration> <%=@tour.duration%> </h3>
<p> <%=@tour.details%> </p>

<%= form_with scope: :tourist_tour, url: tourist_tours_path, local: true do |f|%>
  <div>
    <%= f.label :guest_quantity%> <br>
    <%= f.number_field :guest_quantity, id: 'guest_quantity'%>
  </div>
  
  <div>
    <%= f.label 'Total Price'%> <br>
    <%= f.number_field :amount_bought, readonly: true, id: 'total_price', min: 1%>
  </div>

  <div>
    <%= f.label :start_date%> <br>
    <%= f.date_field :start_date, id: 'start-date'%>
  </div>

  <div>
    <%= f.label :end_date%> <br>
    <%= f.date_field :end_date, readonly: true, id: 'end-date'%>
  </div>

  <%= f.hidden_field :tour_id, value: @tour.id%>
  <%= f.submit 'Avail'%>
  
<%end%>

<%= javascript_pack_tag 'tourist_tour_new' %>